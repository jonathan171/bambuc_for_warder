{% endblock %}
{% block javascripts %}
  <script src="https://cdn.jsdelivr.net/npm/signature_pad@4.0.0/dist/signature_pad.umd.min.js"></script>
	{{ macroRedirect.scriptRedirect}}
	<script>
		{% if is_granted('ROLE_NACIONAL') or  is_granted('ROLE_AUXILIAR_NACIONAL') %}
			{% set is_nacional = 1 %}
		{% else %}
			{% set is_nacional = 0 %}
		{% endif %}
		$(document).ready(function () {

			// =========================
			// FACTURAS
			// =========================
			if ($.fn.DataTable.isDataTable('#data_table_facturas')) {
				$('#data_table_facturas').DataTable().destroy();
			}

			const dtFacturas = $('#data_table_facturas').DataTable({
				serverSide: true,
				processing: true,
				responsive: true,
				pageLength: 50,
				sPaginationType: "full_numbers",
				language: {
					url: "https://cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
				},
				ajax: {
					url: "{{ path('app_factura_table') }}",
					type: "POST",
					data: function (d) {
					d.nacional = {{ is_nacional|default(0) }};
					d.company  = $('#company').val();
					}
				},
				columns: [
					{ data: 'fecha' },
					{ data: 'numero' },
					{ data: 'cliente' },
					{ data: 'total' },
					{ data: 'actions', orderable: false, searchable: false, render: function (d) { return d; } },
					{ data: 'soporte_pago', orderable: false, searchable: false, render: function (d) { return d; } }
				],
				order: [[0, "desc"], [1, "desc"]]
				});

			// recargar al cambiar company (ojo: quité los espacios después de nacional=)
			$('#company').change(function () {
				const url = "{{ path('app_factura_table') }}" + "?nacional={{ is_nacional }}&company=" + $("#company").val();
				dtFacturas.ajax.url(url).load();
			});

			// subir soporte de pago
			$('#data_table_facturas tbody').on('change', '.file_forma_de_pago', function (event) {
				const dataId = $(this).data('id');
				const file = event.target.files[0];

				if (!file) return;

				const formData = new FormData();
				formData.append('file', file);
				formData.append('data_id', dataId);

				$.ajax({
				context: this,
				url: "{{ path('app_factura_save_soporte') }}",
				data: formData,
				type: 'POST',
				processData: false,
				contentType: false,
				success: function () {
					alertify.success('Archivo guardado Correctamente');
					dtFacturas.ajax.reload(null, false);
				},
				error: function () {
					alert('Disculpe, existió un problema');
				}
				});
			});

			// =========================
			// RECIBOS
			// =========================
			if ($.fn.DataTable.isDataTable('#data_table_recibos')) {
				$('#data_table_recibos').DataTable().destroy();
			}

			const dtRecibos = $('#data_table_recibos').DataTable({
				serverSide: true,
				processing: true,
				responsive: true,
				pageLength: 50,
				sPaginationType: "full_numbers",
				language: {
				url: "https://cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
				},
				ajax: {
				url: "{{ path('app_recibo_caja_table') }}",
				type: "POST"
				},
				columns: [
				{ data: 'fecha' },
				{ data: 'numero_recibo' },
				{ data: 'total' },
				{ data: 'actions', orderable: false, searchable: false, render: d => d }
				],
				order: [[1, "desc"]]
			});

		});
		$(document).ready(function () {
			const canvas = document.getElementById('signaturePad');
			const container = document.getElementById('canvasContainer');
			let signaturePad;
			let reciboId = null;

			function setCanvasSize() {
				const ratio = Math.max(window.devicePixelRatio || 1, 1);
				canvas.width = container.offsetWidth * ratio;
				canvas.height = container.offsetHeight * ratio;
				canvas.getContext('2d').scale(ratio, ratio);
			}

			$('#firmaModal').on('shown.bs.modal', function (event) {
				const button = $(event.relatedTarget);
				reciboId = button.data('recibo-id');

				setCanvasSize();
				signaturePad = new SignaturePad(canvas);
				signaturePad.clear();
			});

			$('#clearSignature').on('click', function () {
				if (signaturePad) signaturePad.clear();
			});

			$('#saveSignature').on('click', function () {
				if (!reciboId) return alert('No se pudo obtener el ID del recibo.');
				if (!signaturePad || signaturePad.isEmpty()) return alert('Por favor, registre una firma antes de guardar.');

				const firmaBase64 = signaturePad.toDataURL('image/png');

				$.ajax({
				url: "{{ path('app_recibo_caja_guardar_firma') }}",
				method: 'POST',
				contentType: 'application/json',
				data: JSON.stringify({ reciboId, firma: firmaBase64 }),
				success: function (response) {
					if (response.success) {
					alert('Firma guardada correctamente.');
					$('#firmaModal').modal('hide');
					$('#data_table_recibos').DataTable().ajax.reload(null, false);
					} else {
					alert('Error al guardar la firma.');
					}
				},
				error: function (error) {
					console.error('Error al enviar la firma:', error);
					alert('Ocurrió un error al guardar la firma.');
				}
				});
			});
		});

		function Reportar(id) {
			
			$.ajax({
				url: '{{ path('app_factura_reportar') }}',
				data: {
					id: id
				},
				type: 'POST',
				dataType: 'json',
				success: function (json) {
					alertify.success('Factura enviada correctamente por favor  verifica la respuesta de la Dian');
					$("#data_table_facturas").DataTable().ajax.reload(null, false);
				},
				error: function (xhr, status) {
					alert('Disculpe, existió un problema');
				}
			});

		}

		function ReportarNotacrData(id) {


		var idFactura = id;


		var url = '{{ path('app_nota_credito_reportar') }}';

		$.ajax({
		method: 'POST',
