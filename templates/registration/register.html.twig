{% extends 'base.html.twig' %}

{% block title %}Registrar{% endblock %}

{% block body %}
    <h1>Registrar</h1>
 <div class="card-body">
    {{ form_start(registrationForm) }}
     <div class="form-group mb-3 row pb-3">
            <label  class="col-sm-3 text-end control-label col-form-label">Correo</label>
            <div class="col-sm-9">
             
              {{form_widget(registrationForm.email) }}
            </div> 
     </div>
     <div class="form-group mb-3 row pb-3">
            <label  class="col-sm-3 text-end control-label col-form-label">Contrase√±a</label>
            <div class="col-sm-9">
            
            {{form_widget(registrationForm.plainPassword) }}
            
            </div> 
     </div> 
     <div class="form-group mb-3 row pb-3">
            <label  class="col-sm-3 text-end control-label col-form-label">Nombres</label>
            <div class="col-sm-9">
            
            {{form_widget(registrationForm.firstName) }}
            
            </div> 
     </div> 
    <div class="form-group mb-3 row pb-3">
            <label  class="col-sm-3 text-end control-label col-form-label">Apellidos</label>
            <div class="col-sm-9">
            
            {{form_widget(registrationForm.lastName) }}
            
            </div> 
     </div> 
     <div class="form-group mb-3 row pb-3">
            <label  class="col-sm-3 text-end control-label col-form-label">Rol</label>
            <div class="col-sm-9">
             {{form_widget(registrationForm.roles) }}
            
            </div> 
     </div>   
     <div class="form-group mb-3 row pb-3">
            <label  class="col-sm-3 text-end control-label col-form-label">Acepta los terminos</label>
            <div class="col-sm-9">
             {{form_widget(registrationForm.agreeTerms) }}
            
            </div> 
     </div>  
      
        
         </div>
    <div class="p-3">
        <div class="form-group text-end">
        
         <button type="submit" class="btn btn-info rounded-pill px-4 waves-effect waves-light">Registrar</button>
         
        </div>
    </div>

       
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
