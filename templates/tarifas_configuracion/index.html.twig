{% extends 'base.html.twig' %}

{% block title %}TarifasConfiguracion{% endblock %}

{% block body %}
    <h1>Listado de Configuraciones</h1>

    <table class="table table-striped table-bordered text-nowrap dataTable">
        <thead>
            <tr>
               <th>Valor Dolar</th>
                <th>Tasa Conbustible</th>
                <th>Porcentaje Ganacia</th>
                <th>opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for tarifas_configuracion in tarifas_configuracions %}
            <tr>
                
                <td>{{ tarifas_configuracion.valorDolar }}</td>
                <td>{{ tarifas_configuracion.tasaConbustible }}</td>
                <td>{{ tarifas_configuracion.porcentajeGanacia }}</td>
                <td>
                    <a  class="btn waves-effect waves-light btn-info" href="{{ path('app_tarifas_configuracion_edit', {'id': tarifas_configuracion.id}) }}">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   {# <a href="{{ path('app_tarifas_configuracion_new') }}">Nueva Configuracion</a>#}
{% endblock %}
